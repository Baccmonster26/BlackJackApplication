<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlackJackApplication.MainPage"
             BackgroundImageSource="mainbackground.png"
             Shell.NavBarIsVisible="False">
    <ContentPage.Resources>
        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="MediumVioletRed" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="CornerRadius" Value="20" />
            <Setter Property="BorderColor" Value="DarkRed" />
            <Setter Property="BorderWidth" Value="2" />
            <Setter Property="Padding" Value="20,12" />
            <Setter Property="FontAttributes" Value="Bold" />
        </Style>
    </ContentPage.Resources>
    <Grid RowDefinitions="*, 0.3*, *" ColumnDefinitions="*, 0.8*, *">
        <Button
            Style="{StaticResource MainButtonStyle}"
            Grid.Row="1" 
            Grid.Column="1"
            x:Name="Play"
            Text="Play" 
            SemanticProperties.Hint="Starts the game"
            Clicked="OnPlayClicked"
            HorizontalOptions="Center"
            VerticalOptions="Center"/>
    </Grid>
</ContentPage>
